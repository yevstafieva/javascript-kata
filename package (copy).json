{
  "name": "javascript-kata-1",
  "version": "1.0.0",
  "description": "Code kata in JavaScript where you have to write a library of books and magazines.",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint:fix": "eslint ./src --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denkwai/javascript-kata-1.git"
  },
  "keywords": [
    "javascript",
    "kata"
  ],
  "author": "Tamara Yevstafieva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/denkwai/javascript-kata-1/issues"
  },
  "homepage": "https://github.com/denkwai/javascript-kata-1#readme",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.2.0",
    "react-scripts": "3.4.1",
    "reactstrap": "^8.4.1",
    "redux": "^4.0.5",
    "redux-devtools": "^3.5.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-react": "^7.19.0",
    "style-loader": "^1.1.3",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:node/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "import",
      "node",
      "react"
    ],
    "rules": {
      "brace-style": [
        "error",
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 1,
          "maxBOF": 1
        }
      ],
      "no-trailing-spaces": "error",
      "node/no-unsupported-features/es-syntax": [
        "off",
        {
          "version": ">=8.0.0",
          "ignores": []
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "one-var": [
        "error",
        {
          "uninitialized": "always",
          "initialized": "never"
        }
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "off"
      ],
      "quote-props": [
        "error",
        "as-needed"
      ],
      "sort-imports": "off",
      "strict": "off"
    },
    "overrides": [
      {
        "files": [
          "test/helpers/*.js"
        ],
        "rules": {
          "node/no-unpublished-require": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
